<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/accxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acc X"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/accxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/accyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acc Y"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/accyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/acczLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acc Z"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/acczValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/gyroxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro X"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/gyroxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/gyroyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro Y"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/gyroyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/gyrozLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro Z"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/gyrozValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/temperatureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

</LinearLayout>